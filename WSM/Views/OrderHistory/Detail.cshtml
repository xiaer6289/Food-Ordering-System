@model WSM.Models.OrderDetail

@{
    ViewBag.Title = "Order Details";
}

<p>
    @* <img src= maybe use logo or not implement> *@
</p>

<table class="table detail">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Tables</th>
        <td>@Model.SeatNo</td>
    </tr>
    <tr>
        <th>Food</th>
        <td>
            @if (Model.OrderItems != null && Model.OrderItems.Any())
            {
                <ul style="list-style-type:upper-roman; padding: 0;">
                    @foreach (var item in Model.OrderItems)
                    {
                        <li>@item.Food?.Name (@item.Quantity)</li>
                    }
                </ul>
            }
            else
            {
                <span>No food items</span>
            }
        </td>
    </tr>
    <tr>
        <th>Quantity</th>
        <td>@Model.Quantity</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@Model.Status</td>
    </tr>
    <tr>
        <th>Total Price</th>
        <td>RM @Model.TotalPrice.ToString("F2")</td>
    </tr>
    <tr>
        <th>Order Date</th>
        <td>@Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
    </tr>
</table>

<p>
    <div class="pdf-button">
        <a asp-action="ReadDetail" asp-route-id="@Model.Id" class="pdf-button">Print Details</a>
    </div>
</p>

<p>
    <div class="return-OrderHistory">
        <a asp-action="OrderHistory" class="return-OrderHistory">Return</a>
    </div>
</p>