<!DOCTYPE html>
<html lang="en">
 <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true">
    @RenderSection("head", false) @*optional section name head for individual page to inject content*@
    <script src="~/js/app.js"></script>
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true">


 </head>
    <body>
    <header>

        <div class="left-header">
            <div class="logo">
                <a href="../Table/Index">
                <img src="@Url.Content(
                                         string.IsNullOrEmpty(Context.Session.GetString("CompanyLogo"))
                                             ? "~/images/default-logo.png"
                                             : Context.Session.GetString("CompanyLogo")
                                     )"
                     alt="Company Logo"
                     class="company-logo" />
                </a>
            </div>



            <form data-ajax="true" data-ajax-update="#target"
            class="search" asp-controller="Search" asp-action="Global" method="get">
                <i>🔎</i>
                <input type="search" id="search" name="q" placeholder="@ViewBag.SearchPlaceholder" />
                <input type="hidden" name="context" value="@ViewBag.SearchContext" />
            </form>

        </div>

        <nav class="header-navigation">
            <a href="../Table/Index">Home</a>
            <a href="../Menu/foodlisting">Menu</a>
            <a href="../Food/Foods">Food</a>
            <a href="../Category/Categories">Category</a>
            <a href="../OrderHistory/OrderHistory">Order History</a>
            <a href="../Admin/Admins">Admin</a>
            <a href="../Staff/ReadStaff">Staff</a>
            <a href="../Food/Menu">Menu</a>
            <a href="../Ingredient/ReadIngredient">Restock</a>
        </nav>

        <div class="portrait" onclick="toggleDropdown()">
            @if (Context.Session.GetString("ProfilePhoto") != null)
            {
                <img src="@Url.Content(Context.Session.GetString("ProfilePhoto"))"
                     alt="Profile"
                     style="width:40px; height:40px; border-radius:50%;" />
            }
            else
            {
                <img src="~/images/default-profile.png"
                     alt="Default Profile"
                     style="width:40px; height:40px; border-radius:50%;" />
            }

            <div class="dropdown" id="dropdownMenu">
               
                @if (Context.Session.GetString("Role") == "Admin")
                {
                    <a href="../Admin/UpdateProfile">Update Profile</a>
                }
                else if (Context.Session.GetString("Role") == "Staff")
                {
                    <a href="../Staff/UpdateProfile">Update Profile</a>
                }
                <a href="../Home/Both">Logout</a>
            </div>
        </div>



    </header>


        <main>
            @RenderBody()
        </main>
        <script src="/js/jquery.min.js"></script>
        <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
        <script src="/js/jquery.validate.min.js"></script>
        <script src="/js/jquery.validate.unobtrusive.min.js"></script>
        <script src="/js/app.js" asp-append-version="true"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>

<script>
    function toggleDropdown() {
      document.getElementById("dropdownMenu").classList.toggle("show");
    }

    let timer = null;

    $('#search').on('input', s => {
        clearTimeout(timer);
        timer = setTimeout(() => $(s.target.form).submit(), 500);
    });

</script>