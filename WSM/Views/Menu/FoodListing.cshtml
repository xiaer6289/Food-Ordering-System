@model List<WSM.Models.Food>

@{
    ViewBag.Title = "Food Listing";
    var categories = ViewBag.Categories as List<WSM.Models.Category>;
    var selectedCategory = ViewBag.SelectedCategory as string ?? "All";
}

@section head {
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Order page specific CSS -->
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
}

<h2 class="mb-4">Food Menu</h2>

<!-- Category Filter -->
<div class="mb-3">
    <a href="@Url.Action("FoodListing", "Order", new { categoryId = "All" })"
       class="btn @(selectedCategory == "All" ? "btn-primary" : "btn-outline-primary")">All</a>
    @foreach (var cat in categories)
    {
        <a href="@Url.Action("FoodListing", "Order", new { categoryId = cat.Id })"
           class="btn @(selectedCategory == cat.Id ? "btn-primary" : "btn-outline-primary")">@cat.Name</a>
    }
</div>

<!-- Food Grid -->
<div class="container">
    <div class="row">
        @foreach (var food in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm food-card">
                    <img src="@(!string.IsNullOrEmpty(food.Image) ? food.Image : Url.Content("~/images/default.png"))"
                         class="card-img-top"
                         alt="@food.Name"
                         style="height:150px; object-fit:contain;" />
                    <div class="card-body">
                        <h5 class="card-title">@food.Name</h5>
                        <p class="fw-bold">RM @food.Price</p>

                        <a asp-controller="Menu" asp-action="FoodDetail" asp-route-id="@food.Id"
                           class="btn btn-sm btn-primary">View Detail</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
