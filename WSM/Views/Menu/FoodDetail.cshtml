@model WSM.Models.Food

@{
    ViewData["Title"] = "Food Detail";
}

<h1 class="table-header">Food Detail - @Model.Name</h1>

<div class="food-detail-container">
    <div class="food-image">
        <img src="@(!string.IsNullOrEmpty(Model.Photo)
                                           ? Url.Content("~/uploads/" + Model.Photo)
                                           : Url.Content("~/images/default.png"))"
             alt="@Model.Name"
             style="max-width:300px; object-fit:contain;" />
    </div>

    <div class="food-info">
        <p><strong>Food ID:</strong> @Model.Id</p>
        <p><strong>Price:</strong> RM @Model.Price</p>
        <p><strong>Description:</strong> @Model.Description</p>

        <hr />

        <form asp-controller="Cart" asp-action="AddToCart" method="post">
            <input type="hidden" name="seatNo" value="@ViewBag.SeatNo" />
            <input type="hidden" name="foodId" value="@Model.Id" />

            <div class="mb-3">
                <label for="quantity"><strong>Quantity:</strong></label>
                <input type="number" id="quantity" name="quantity" value="1" min="1" max="10" class="form-control-sm" />
            </div>

            <div class="mb-3">
                <label for="extraDetail"><strong>Extra Detail (optional):</strong></label>
                <textarea id="extraDetail" name="extraDetail" class="form-control-sm"></textarea>
            </div>

            <button type="submit" class="btn-addcart">Add to Cart</button>
        </form>
    </div>
</div>

<div class="cart-actions-large">
    <a asp-controller="Menu" asp-action="FoodListing" asp-route-seatNo="@ViewBag.SeatNo"
       class="return-orderhistory" type="button" style="cursor:pointer;">Back</a>
</div>
