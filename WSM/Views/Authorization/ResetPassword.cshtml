@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/app.css" />
</head>
<body id="reset-password-body">
    <div id="reset-password-container" class="container p-3 border border-5 rounded-3" style="width:50%">
        <h1 id="reset-password-title" class="display-6 text-center p-2 bg-light">
            Change Password
        </h1>

        <div id="reset-password-image-box">
            <img id="reset-password-image" src="~/images/change_password.jpg" alt="forgot password image">
        </div>

        <!-- Show error or success messages -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div id="reset-password-error" class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <!-- Form -->
        <form id="reset-password-form" asp-action="ResetPassword" asp-controller="Authorization" method="post">
            <!-- Hidden fields for token + email -->
            <input type="hidden" name="email" value="@ViewBag.Email" />
            <input type="hidden" name="token" value="@ViewBag.Token" />
            <input type="hidden" name="role" value="@ViewBag.Role" />

            <div class="row mb-3 justify-content-md-center">
                <label for="newPasswordInput" class="col-4 col-form-label">New Password</label>
                <div class="col-lg-auto">
                    <input type="password" name="newPassword" id="newPasswordInput" class="form-control" required>
                </div>
            </div>

            <div class="row mb-3 justify-content-md-center">
                <label for="confirmPasswordInput" class="col-4 col-form-label">Confirm Password</label>
                <div class="col-lg-auto">
                    <input type="password" name="confirmPassword" id="confirmPasswordInput" class="form-control" required>
                </div>
            </div>

            <div class="row mb-3 justify-content-md-center">
                <div class="col-8">
                    <button id="reset-password-button" type="submit" class="btn btn-primary">Change</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
