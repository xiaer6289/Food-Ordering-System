@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/change_password.css" />
</head>
<body>
    <div class="container p-3 border border-5 rounded-3" style="width:50%">
        <h1 class="display-6 text-center p-2 bg-light">
            Change Password
        </h1>

        <div class="change_password_image">
            <img id="change_password" src="~/images/forgot-password.jpg" alt="forgot password image">
        </div>

        <!-- Show error or success messages -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
   

        <!-- Form -->
        <form asp-action="ResetPassword" asp-controller="Authorization" method="post">
            <!-- Hidden fields for token + email -->
            <input type="hidden" name="email" value="@ViewBag.Email" />
            <input type="hidden" name="token" value="@ViewBag.Token" />
            <input type="hidden" name="role" value="@ViewBag.Role" />

            <div class="row mb-3 justify-content-md-center">
                <label for="inputPassword" class="col-4 col-form-label">New Password</label>
                <div class="col-lg-auto">
                    <input type="password" name="newPassword" id="inputPassword" class="form-control" required>
                </div>
            </div>

            <div class="row mb-3 justify-content-md-center">
                <label for="inputPasswordAgain" class="col-4 col-form-label">Confirm Password</label>
                <div class="col-lg-auto">
                    <input type="password" name="confirmPassword" id="inputPasswordAgain" class="form-control" required>
                </div>
            </div>

            <div class="row mb-3 justify-content-md-center">
                <div class="col-8">
                    <button type="submit" class="btn btn-primary">Change</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
