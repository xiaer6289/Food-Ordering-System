@{
    ViewData["Title"] = "Restaurant POS System";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <!-- Introduction Section -->
    <div class="text-center mb-5">
        <h1>Welcome to BeePOS</h1>
        <p class="lead text-muted fst-italic fw-medium">
            Smart POS, Sweet as Honey.
        </p>
        <img src="~/images/BeePos.png" alt="POS System" class="img-fluid" style="max-width:400px;">
    </div>
    <style>
        body {
            background-image: url('@Url.Content("~/images/background1.jpg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
        }
    </style>
    <div class="row justify-content-center mb-5">
        <div class="col-md-5">
            <div class="card shadow-sm p-4">
              

                <h3 class="text-center mb-4">Login</h3>
                <form method="post" asp-controller="Authorization" asp-action="Login">
                    <div class="form-group mb-3">
                        <label>Email</label>
                        <input type="email" name="Email" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label>Password</label>
                        <input type="password" name="Password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>

                <p class="text-center mt-4">
                    Don’t have an account?
                    <a asp-controller="Authorization" asp-action="Register">Register here</a>
                </p>
            </div>
        </div>
    </div>
</div>
