@model List<WSM.Models.Seat>

@{
    ViewData["Title"] = "Table Management";
}

<link rel="stylesheet" href="~/css/app.css" />

<div class="container mt-4">
    <div class="table-header">
        <h1>Table Management</h1>
        <p>Total Seats: <strong>@Model.Count</strong></p>
    </div>

    <div class="three-column-layout">
        <div class="table-area">
            <div class="table-grid">
                @foreach (var seat in Model)
                {
                    <a asp-controller="Menu" asp-action="FoodListing" asp-route-SeatNo="@seat.SeatNo" class="table-link">
                        <div class="table-square @(seat.Status == "Available" ? "available" : "occupied")">
                            <span class="seat-badge">@seat.SeatNo</span>
                            <div class="seat-center">
                                <div class="seat-status">
                                    @seat.Status
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>

        <div class="action-area">
            <a asp-controller="Table" asp-action="Create" class="add-table">Add Table</a>
            <button type="button" onclick="location.href='@Url.Action("Delete", "Table")'" class="delete-table">Delete Table</button>
        </div>
    </div>
</div>
