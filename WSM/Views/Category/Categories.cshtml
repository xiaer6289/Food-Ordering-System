@model IEnumerable<WSM.Models.CategoryVM>

@{
    ViewData["Title"] = "Category Management";
}

<div class="container mt-4">
    <div class="section-title d-flex justify-content-between align-items-center">
        <h2>Category Management</h2>
        <div>
            <a asp-controller="Food" asp-action="Foods" class="btn-back me-2">← Back to Food</a>
            <a asp-action="CreateCategory" class="btn-add-category">+ Add Category</a>
        </div>
    </div>

    <!-- Search Form -->
    <form asp-action="Categories" method="get" class="search-form mb-3">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control search-box"
                   placeholder="Search by name" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="check-all-btn">Search</button>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <a asp-action="Categories" class="uncheck-all-btn">Clear</a>
            }
        </div>
    </form>

    <div class="table-responsive">
        <table class="record-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th style="width:180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No category records found.</td>
                    </tr>
                }
                else
                {
                    foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                <div class="edit-remove-group">
                                    <a asp-action="EditCategory" asp-route-id="@category.Id" class="edit-ingredient">Edit</a>
                                    <form asp-action="DeleteConfirmed" asp-route-id="@category.Id" method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <button type="submit" class="remove-ingredient">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
