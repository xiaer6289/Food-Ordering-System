@model WSM.Models.CategoryVM

<div class="edit-ingredient-form">
    <h2 class="edit-ingredient-title">Add Category</h2>

    <form asp-action="CreateCategory" method="post" class="edit-ingredient-wrapper">
        @Html.AntiForgeryToken()

        <div>
            <label asp-for="Id"></label>
            <input asp-for="Id" type="text" class="form-control" placeholder="BV,AP,MD" id="CategoryIdInput" required />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Beverages, Appetizers, Main Dish"
                   pattern="[A-Za-z\s]+" title="Category name must contain only letters and spaces" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="edit-button-group">
            <button type="submit" class="edit-submit-btn">Save</button>
            <a asp-action="Categories" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#CategoryIdInput').on('input', function () {
                this.value = this.value.toUpperCase();
            });
        });
    </script>
}
