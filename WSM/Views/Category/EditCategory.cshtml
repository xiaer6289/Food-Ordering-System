@model WSM.Models.CategoryVM

@{
    ViewData["Title"] = "Edit Category";
}

<div class="edit-ingredient-form">
    <h2 class="edit-ingredient-title">Edit Category</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="EditCategory" method="post" class="edit-ingredient-wrapper">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Id">Category ID</label>
            <input asp-for="Id" class="edit-ingredient-quantity" readonly />
        </div>

        <div>
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="edit-ingredient-quantity" placeholder="Enter category name"
                   pattern="[A-Za-z\s]+" title="Category name must contain only letters and spaces" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="edit-button-group">
            <button type="submit" class="edit-submit-btn">Save Changes</button>
            <a asp-action="Categories" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>
