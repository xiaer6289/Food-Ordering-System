@model WSM.ViewModels.OrderConfirmationViewModel

<h2>Order Confirmation</h2>

<p><strong>Order ID:</strong> @Model.OrderDetail.Id</p>

<p><strong>Subtotal:</strong> RM @Model.Payment.Subtotal.ToString("F2")</p>
<p><strong>Tax:</strong> RM @Model.Payment.Tax.ToString("F2")</p>
<p><strong>Service Charge:</strong> RM @Model.Payment.ServiceCharge.ToString("F2")</p>
<p><strong>Total:</strong> RM @Model.Payment.TotalPrice.ToString("F2")</p>
<p><strong>Amount Paid:</strong> RM @Model.Payment.AmountPaid.ToString("F2")</p>
<p><strong>Payment Method:</strong> @Model.Payment.PaymentMethod</p>

<h3>Ordered Items</h3>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Food ID</th>
            <th>Food Name</th>
            <th>Quantity</th>
            <th>Extra Detail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Food.Id</td>
                <td>@item.Food.Name</td>
                <td>@item.Quantity</td>
                <td>@item.ExtraDetail</td>
            </tr>
        }
    </tbody>
</table>

<a href="../Table/Index" class="btn btn-primary">Home</a>
