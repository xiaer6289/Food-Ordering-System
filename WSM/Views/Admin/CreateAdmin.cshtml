@model WSM.Models.Admin
@{
    ViewData["Title"] = "Add Admin";
}

<h2>Add Admin</h2>

<form asp-action="CreateAdmin" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNo"></label>
        <input asp-for="PhoneNo" class="form-control" placeholder="Phone No without '-'" />
        <span asp-validation-for="PhoneNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Admins" class="btn btn-secondary">Cancel</a>
</form>

