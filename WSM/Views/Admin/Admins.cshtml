@model IEnumerable<WSM.Models.Admin>
@{
    ViewData["Title"] = "Admin List";
}

<h2>Admin List</h2>

<div class="mb-3">
    <a asp-action="CreateAdmin" class="btn btn-primary">Add New Admin</a>
</div>

<form asp-action="Admins" method="get" class="mb-3">
    <div class="input-group">
        <input name="searchString" class="form-control" placeholder="Search by name, email, or phone number" value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-primary">Search</button>
        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
        {
            <a asp-action="Admins" class="btn btn-secondary ms-2">Clear</a>
        }
    </div>
</form>

@if (!Model.Any())
{
    <p>No admins found.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Admin ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.AdminId</td>
                    <td>@admin.Name</td>
                    <td>@admin.Email</td>
                    <td>@admin.PhoneNo</td>
                    <td>
                        <a asp-action="EditAdmin" asp-route-id="@admin.AdminId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteAdmin" asp-route-id="@admin.AdminId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this admin?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

