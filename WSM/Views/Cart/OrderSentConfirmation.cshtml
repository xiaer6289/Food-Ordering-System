@{
    ViewData["Title"] = "Order Sent";
    Layout = "_LayoutIngredient";
}

<div class="order-sent-box">
    <h2>✅ Order Sent</h2>
    <p>Your order (ID: @ViewBag.OrderId) has been sent to the kitchen.</p>
    <p>Status: <b>Preparing</b></p>

    <div class="order-extra">
        <p><b>Estimated Time:</b> 15 minutes</p>
        <p><b>Order Time:</b> @DateTime.Now.ToString("HH:mm:ss")</p>
    </div>

    <a asp-controller="Table" asp-action="Index" class="back-btn">Back to Menu</a>
</div>
