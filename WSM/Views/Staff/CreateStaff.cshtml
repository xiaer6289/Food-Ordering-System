@model WSM.Models.Staff
@{
    ViewData["Title"] = "Add Staff";
}

<link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />

<div class="add-staff-form">
    <h2 class="add-staff-title">Add Staff</h2>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }


    <form asp-action="CreateStaff" method="post" class="add-staff-wrapper">
        @Html.AntiForgeryToken()

        <div>
            <label asp-for="Name">Name</label>
            <input asp-for="Name" placeholder="Enter staff name" class="add-staff-input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" placeholder="e.g., staff@example.com" maxlength="100" class="add-staff-input" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="PhoneNo">Phone Number</label>
            <input asp-for="PhoneNo" placeholder="e.g., 0123456789" pattern="^01[0-9]{8,13}$" class="add-staff-input" required />
            <span asp-validation-for="PhoneNo" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" placeholder="Enter password" class="add-staff-input" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Salary">Salary (RM)</label>
            <input asp-for="Salary" type="number" step="0.01" placeholder="Enter salary" class="add-staff-input" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="add-staff-button-group">
            <button type="submit" class="add-staff-submit-btn">Add Staff</button>
            <a asp-action="ReadStaff" class="add-staff-cancel-btn">Cancel</a>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/app.js"></script>
