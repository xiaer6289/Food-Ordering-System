@model WSM.Models.Staff
@{
    ViewData["Title"] = "Add Staff";
    Layout = "_LayoutIngredient";
}

<div class="edit-ingredient-form">
    <h2 class="edit-ingredient-title">Add Staff</h2>

    <!-- Inline Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- Inline Validation Error Messages -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.SelectMany(v => v.Value.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="CreateStaff" method="post" class="edit-ingredient-wrapper">
        @Html.AntiForgeryToken()

        <div>
            <label asp-for="Name">Name</label>
            <input asp-for="Name" placeholder="Enter staff name" class="edit-ingredient-quantity" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" placeholder="e.g., staff@example.com" maxlength="100" class="edit-ingredient-quantity" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="PhoneNo">Phone Number</label>
            <input asp-for="PhoneNo" placeholder="e.g., 0123456789" pattern="^01[0-9]{8,13}$" class="edit-ingredient-quantity" required />
            <span asp-validation-for="PhoneNo" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" placeholder="Enter password" class="edit-ingredient-quantity" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Salary">Salary (RM)</label>
            <input asp-for="Salary" type="number" step="0.01" placeholder="Enter salary" class="edit-ingredient-quantity" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="edit-button-group">
            <button type="submit" class="edit-submit-btn">Add Staff</button>
            <a asp-action="ReadStaff" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>
