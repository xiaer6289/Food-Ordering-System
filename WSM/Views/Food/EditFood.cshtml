@model WSM.Models.EditFoodVM

@{
    ViewData["Title"] = "Edit Food";
}

@if (TempData["Info"] != null)
{
    <div class="alert alert-success">
        @TempData["Info"]
    </div>
}

<div class="edit-ingredient-form">
    <h2 class="edit-ingredient-title">Edit Food</h2>

    <form asp-controller="Food" asp-action="EditFood" method="post" enctype="multipart/form-data" class="edit-ingredient-wrapper">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <!-- Food Name -->
        <div>
            <label asp-for="Name">Food Name <span class="text-danger">*</span></label>
            <input asp-for="Name" placeholder="Enter food name" class="edit-ingredient-quantity" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div>
            <label asp-for="Price">Price <span class="text-danger">*</span></label>
            <input asp-for="Price" type="number" step="0.01" min="0.10" max="9999.99"
                   placeholder="e.g., 10.50" class="edit-ingredient-quantity" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="edit-ingredient-quantity" rows="3"
                      placeholder="Enter description (optional)"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Current Photo -->
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="mt-2">
                <label>Current Photo</label>
                <div>
                    <img src="/uploads/@Model.Image" alt="Current Photo" style="max-width:150px; border:1px solid #ccc;" />
                </div>
            </div>
        }

        <!-- Upload New Photo -->
        <div class="mt-3">
            <label asp-for="Photo">Upload New Photo</label>
            <input asp-for="Photo" type="file" class="edit-ingredient-quantity" accept="image/*" />
            <span asp-validation-for="Photo" class="text-danger"></span>

            <div class="mt-2">
                <img id="previewImage" src="" alt="Preview" style="max-width:150px; display:none; border:1px solid #ccc;" />
            </div>
        </div>

        <!-- Category -->
        <div class="mt-3">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="edit-ingredient-quantity">
                <option value="">-- Keep Current Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="edit-button-group mt-4">
            <button type="submit" class="edit-submit-btn btn btn-primary">Save Changes</button>
            <a asp-action="Foods" class="cancel-btn btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

