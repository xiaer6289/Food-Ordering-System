@model WSM.Models.EditFoodVM

@{
    ViewData["Title"] = "Edit Food";
    Layout = null;
}

<link rel="stylesheet" href="~/css/app.css" asp-append-version="true">

<form asp-controller="Food" asp-action="EditFood" method="post" enctype="multipart/form-data" class="edit-ingredient-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="edit-ingredient-wrapper">
        <h2 class="edit-ingredient-title">Edit Food</h2>

        <!-- Success Message -->
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["Info"]
            </div>
        }

        <input type="hidden" asp-for="Id" />

        <!-- Food Name -->
        <div>
            <label asp-for="Name">Food Name:</label>
            <input asp-for="Name" placeholder="Enter food name" class="edit-ingredient-quantity" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div>
            <label asp-for="Price">Price:</label>
            <input asp-for="Price" type="number" step="0.01" min="0.10" max="9999.99"
                   placeholder="e.g., 10.50" class="edit-ingredient-quantity" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Description">Description:</label>
            <textarea asp-for="Description" class="edit-ingredient-quantity" rows="3"
                      placeholder="Enter description (optional)"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Current Photo -->
        @if (!string.IsNullOrEmpty(Model.CurrentPhoto))
        {
            <div class="mb-2">
                <label>Current Photo:</label><br />
                <img id="currentPhoto" src="/uploads/@Model.CurrentPhoto" alt="Current Photo"
                     class="current-photo-preview" style="max-width:150px; border: 1px solid #ccc; padding: 2px;" />
            </div>
            <img src="/uploads/@Model.CurrentPhoto" alt="Current Photo" />
        }

        <!-- Drag-and-Drop New Photo -->
        <div class="mt-3">
            <label asp-for="Photo">Upload New Photo:</label>
            <div id="dropZone" class="drop-zone">
                <p>Drag & drop an image here or click to select</p>
                <input asp-for="Photo" type="file" accept="image/*" class="file-input" />
            </div>
            <span asp-validation-for="Photo" class="text-danger"></span>

            <!-- Preview of new photo -->
            <div class="mt-2">
                <label>New Photo Preview:</label><br />
                <img id="previewImage" src="" alt="Preview" class="current-photo-preview"
                     style="display:none; max-width:150px; border: 1px solid #ccc; padding: 2px;" />
            </div>
        </div>

        <!-- Category -->
        <div class="mt-3">
            <label asp-for="CategoryId">Category:</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="edit-ingredient-quantity">
                <option value="">-- Keep Current Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="edit-button-group mt-3">
            <button type="submit" class="ingredient-edit-submit-btn">Update</button>
            <button type="button" class="ingredient-edit-cancel-btn" onclick="window.location.href='/Food/Foods'">Cancel</button>
        </div>
    </div>
</form>



<script>
    const dropZone = document.getElementById('dropZone');
    const fileInput = dropZone.querySelector('.file-input');
    const previewImage = document.getElementById('previewImage');

    // Click to open file dialog
    dropZone.addEventListener('click', () => fileInput.click());

    // Handle file selection
    fileInput.addEventListener('change', () => {
        if (fileInput.files.length) {
            previewImage.src = URL.createObjectURL(fileInput.files[0]);
            previewImage.style.display = 'block';
        }
    });

    // Drag over effect
    dropZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropZone.classList.add('dragover');
    });

    dropZone.addEventListener('dragleave', () => {
        dropZone.classList.remove('dragover');
    });

    // Drop file
    dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.classList.remove('dragover');
        if (e.dataTransfer.files.length) {
            fileInput.files = e.dataTransfer.files;
            previewImage.src = URL.createObjectURL(e.dataTransfer.files[0]);
            previewImage.style.display = 'block';
        }
    });
</script>

