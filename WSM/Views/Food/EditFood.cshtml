@model WSM.Models.EditFoodVM

@{
    ViewData["Title"] = "Edit Food";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="edit-ingredient-form">
    <h2 class="edit-ingredient-title">Edit Food</h2>

    <form asp-controller="Food" asp-action="EditFood" method="post" class="edit-ingredient-wrapper">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <!-- Food Name -->
        <div>
            <label asp-for="Name">Food Name <span class="text-danger">*</span></label>
            <input asp-for="Name" placeholder="Enter food name" class="edit-ingredient-quantity" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div>
            <label asp-for="Price">Price <span class="text-danger">*</span></label>
            <input asp-for="Price" type="number" step="0.01" min="0.10" max="9999.99"
                   placeholder="e.g., 10.50" class="edit-ingredient-quantity" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="edit-ingredient-quantity" rows="3"
                      placeholder="Enter description (optional)"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Image URL with Preview -->
        <div>
            <label asp-for="Image">Image URL</label>
            <input asp-for="Image" id="ImageUrl" class="edit-ingredient-quantity" placeholder="Enter image URL (optional)" />
            <span asp-validation-for="Image" class="text-danger"></span>

            <div class="mt-2">
                <img id="previewImage"
                     src="@Model?.Image"
                     alt="Preview"
                     style="max-width:150px; @(string.IsNullOrEmpty(Model?.Image) ? "display:none;" : "")" />
            </div>
        </div>

        <!-- Category -->
        <div>
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="edit-ingredient-quantity">
                <option value="">-- Keep Current Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="edit-button-group">
            <button type="submit" class="edit-submit-btn">Save Changes</button>
            <a asp-action="Foods" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const imageInput = document.getElementById('ImageUrl');
            const preview = document.getElementById('previewImage');

            if (imageInput && preview) {
                imageInput.addEventListener('input', function () {
                    const url = imageInput.value.trim();
                    if (url) {
                        preview.src = url;
                        preview.style.display = 'block';
                    } else {
                        preview.style.display = 'none';
                    }
                });

                preview.onerror = function () {
                    preview.style.display = 'none';
                };
            }
        });
    </script>
}
