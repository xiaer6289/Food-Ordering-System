@model IEnumerable<WSM.Models.Food>

@{
    ViewData["Title"] = "Menu";
}

<link rel="stylesheet" href="~/css/food.css" />
<script src="~/js/food.js"></script>

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold text-primary">Our Menu</h2>

    <!-- FILTER FORM -->
    <form method="get" asp-action="Menu" class="row g-3 mb-4 align-items-center filter-form">
        <!-- Category Filter -->
        <div class="col-md-4">
            <select name="categoryId" class="form-select form-select-lg filter-dropdown">
                <option value="">All Categories</option>
                @foreach (var cat in (SelectList)ViewBag.Categories)
                {
                    var isSelected = cat.Value == (ViewData["SelectedCategory"]?.ToString() ?? "");
                    <option value="@cat.Value" selected="@(isSelected ? "selected" : null)">
                        @cat.Text
                    </option>
                }
            </select>
        </div>

        <!-- Search Box -->
        <div class="col-md-5">
            <input type="text"
                   name="searchString"
                   class="form-control form-control-lg search-box"
                   placeholder="Search for a food item..."
                   value="@ViewData["CurrentFilter"]" />
        </div>

        <!-- Buttons -->
        <div class="col-md-3 d-grid d-md-flex justify-content-md-start">
            <button type="submit" class="btn btn-primary btn-lg me-2">
                <i class="bi bi-search"></i> Filter
            </button>
            <a asp-action="Menu" class="btn btn-secondary btn-lg">
                <i class="bi bi-x-circle"></i> Clear
            </a>
        </div>
    </form>

    <!-- FOOD CARDS -->
    @if (!Model.Any())
    {
        <div class="text-center text-muted fs-5">
            No food items available at the moment.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var food in Model)
            {
                <div class="col">
                    <div class="card food-card shadow-sm h-100">
                        @if (!string.IsNullOrEmpty(food.Image))
                        {
                            <img src="@food.Image" class="card-img-top food-img" alt="@food.Name">
                        }
                        else
                        {
                            <div class="card-img-top placeholder-img d-flex align-items-center justify-content-center">
                                <span class="text-muted">No Image</span>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title fw-bold">@food.Name</h5>
                            <p class="card-text text-muted">@food.Description</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="price fw-bold text-success">@food.Price.ToString("C")</span>
                                <span class="badge bg-secondary">@food.Category?.Name</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
