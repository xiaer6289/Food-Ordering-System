@model IEnumerable<WSM.Models.Food>

@{
    ViewData["Title"] = "Food Management";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="section-title d-flex justify-content-between align-items-center">
        <h2>Food Management</h2>
        <div>
            
            <a asp-action="CreateFood" class="btn-add-category">+ Add Food</a>
        </div>
    </div>

    <!-- Search Form -->
    <form asp-action="Foods" method="get" class="search-form mb-3">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control search-box"
                   placeholder="Search by name" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="check-all-btn">Search</button>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <a asp-action="Foods" class="uncheck-all-btn">Clear</a>
            }
        </div>
    </form>

    <!-- Food Table -->
    <div class="table-responsive">
        <table class="record-table">
            <thead>
                <tr>
                    <th style="width:60px;">ID</th>
                    <th style="width:80px;">Image</th>
                    <th>Name</th>
                    <th style="width:100px;">Price</th>
                    <th>Description</th>
                    <th style="width:150px;">Category</th>
                    <th style="width:180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No food records found.</td>
                    </tr>
                }
                else
                {
                    foreach (var food in Model)
                    {
                        <tr>
                            <td>@food.Id</td>
                            <td>
                                @if (!string.IsNullOrEmpty(food.Image))
                                {
                                    <img src="@food.Image" alt="@food.Name" style="max-height:50px;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@food.Name</td>
                            <td>@food.Price.ToString("C")</td>
                            <td>@food.Description</td>
                            <td>@food.Category?.Name</td>
                            <td>
                                <div class="edit-remove-group">
                                    <a asp-action="EditFood" asp-route-id="@food.Id" class="edit-ingredient">Edit</a>
                                    <form asp-action="DeleteFood" asp-route-id="@food.Id" method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this food item?');">
                                        <button type="submit" class="remove-ingredient">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/food.js"></script>
