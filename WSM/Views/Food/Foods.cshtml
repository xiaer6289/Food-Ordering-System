@model IEnumerable<WSM.Models.Food>

@{
    ViewData["Title"] = "Food Management";
}

<link rel="stylesheet" href="~/css/food.css" />

<div class="container mt-4">
    <div class="section-title">
        <h2>Food Management</h2>
        <a asp-action="CreateFood" class="btn btn-success">+ Add Food</a>
    </div>

    <!-- Search Form (Search by Name Only) -->
    <form asp-action="Foods" method="get" class="search-form">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control search-box" placeholder="Search by name" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-warning">Search</button>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <a asp-action="Foods" class="btn btn-warning">Clear</a>
            }
        </div>
    </form>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No food records found.</td>
                    </tr>
                }
                else
                {
                    foreach (var food in Model)
                    {
                        <tr>
                            <td>@food.Id</td>
                            <td>
                                @if (!string.IsNullOrEmpty(food.Image))
                                {
                                    <img src="@food.Image" alt="@food.Name" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@food.Name</td>
                            <td>@food.Price.ToString("C")</td>
                            <td>@food.Description</td>
                            <td>@food.Category?.Name</td>
                            <td class="actions">
                                <a asp-action="EditFood" asp-route-id="@food.Id" class="btn-edit">Edit</a>
                                <a asp-action="DeleteFood" asp-route-id="@food.Id" class="btn-delete"
                                   onclick="return confirm('Are you sure you want to delete this food item?');">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/food.js"></script>
