@model IEnumerable<WSM.Models.Food>

@{
    ViewData["Title"] = "Food Management";
}

<link rel="stylesheet" href="~/css/food.css" />

<div class="section-title d-flex justify-content-between align-items-center">
    <h2>Food Management</h2>
    <div>
        <a asp-controller="Category" asp-action="Categories" class="btn btn-info me-2">📂 Manage Categories</a>
        <a asp-action="CreateFood" class="btn btn-success">+ Add Food</a>
    </div>
</div>

    <form asp-action="Foods" method="get" class="search-form mt-3">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control search-box"
                   placeholder="Search by name" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-warning">Search</button>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <a asp-action="Foods" class="btn btn-warning">Clear</a>
            }
        </div>
    </form>

    <div class="table-responsive mt-4">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No food records found.</td>
                    </tr>
                }
                else
                {
                    foreach (var food in Model)
                    {
                        <tr>
                            <td>@food.Id</td>
                            <td>
                                @if (!string.IsNullOrEmpty(food.Image))
                                {
                                    <img src="@food.Image" alt="@food.Name" style="max-height: 50px;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@food.Name</td>
                            <td>@food.Price.ToString("C")</td>
                            <td>@food.Description</td>
                            <td>@food.Category?.Name</td>
                            <td class="actions">
                                <a asp-action="EditFood" asp-route-id="@food.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                                <a asp-action="DeleteFood" asp-route-id="@food.Id"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this food item?');">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/food.js"></script>
