@model List<WSM.Models.Food>

@{
    ViewBag.Title = "Food Listing";
    var categories = ViewBag.Categories as List<WSM.Models.Category>;
    var selectedCategory = ViewBag.SelectedCategory as string ?? "All";
}

@section head {
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS for Food Menu -->
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
}

<div class="container my-4">
    <h2 class="mb-4">Food Menu</h2>

    <!-- Category Filter Buttons -->
    <div class="mb-4">
        <a href="@Url.Action("FoodListing", "Order", new { categoryId = "All" })"
           class="btn @(selectedCategory == "All" ? "btn-primary" : "btn-outline-primary")">
            All
        </a>

        @foreach (var cat in categories)
        {
            <a href="@Url.Action("FoodListing", "Order", new { categoryId = cat.Id })"
               class="btn @(selectedCategory == cat.Id ? "btn-primary" : "btn-outline-primary")">
                @cat.Name
            </a>
        }
    </div>

    <!-- Food Grid -->
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var food in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm food-card">
                        <img src="@(!string.IsNullOrEmpty(food.Photo)
                                                                 ? Url.Content("~/uploads/" + food.Photo)
                                                                 : Url.Content("~/images/default.png"))"
                     class="card-img-top"
                     alt="@food.Name"
                     style="height:150px; object-fit:contain;" />

                        <div class="card-body text-center">
                            <h5 class="card-title">@food.Name</h5>
                            <p class="fw-bold text-success">RM @food.Price.ToString("F2")</p>

                            <a asp-controller="Order"
                               asp-action="FoodDetail"
                               asp-route-id="@food.Id"
                               class="btn btn-sm btn-primary">
                                View Detail
                            </a>
                        </div>
                    </div>
                </div>
                }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    No food items available in this category.
                </div>
            </div>
        }
    </div>
</div>
