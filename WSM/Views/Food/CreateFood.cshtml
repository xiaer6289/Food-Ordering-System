@model WSM.Models.Food

@{
    ViewData["Title"] = "Add Food";
}

<h2>Add Food</h2>

<form asp-controller="Food" asp-action="CreateFood" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <!-- Food Name -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Food Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter food name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Price -->
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.10" max="9999.99" placeholder="e.g., 10.50" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description (optional)"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Image URL -->
    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image URL</label>
        <input asp-for="Image" id="ImageUrl" class="form-control" placeholder="Enter image URL (optional)" />
        <span asp-validation-for="Image" class="text-danger"></span>

        <!-- Live preview -->
        <div class="mt-2">
            <img id="previewImage" src="" alt="Preview"
                 class="img-thumbnail"
                 style="max-width:150px; display:none;" />
        </div>
    </div>

    <!-- Category -->
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" required>
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <!-- Submit buttons -->
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-warning">Reset</button>
        <a asp-action="Foods" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        const imageInput = document.getElementById('ImageUrl');
        const preview = document.getElementById('previewImage');

        imageInput.addEventListener('input', function () {
            const url = imageInput.value.trim();
            if (url) {
                preview.src = url;
                preview.style.display = 'block';
            } else {
                preview.style.display = 'none';
            }
        });

        preview.onerror = function () {
            preview.style.display = 'none';
        };
    </script>
}
