@model WSM.Models.FoodVM

@{
    ViewData["Title"] = "Add Food";
    Layout = "_LayoutIngredient";
}

<div class="edit-ingredient-form">
    <h2 class="edit-ingredient-title">Add Food</h2>

    <form asp-controller="Food" asp-action="CreateFood" method="post" enctype="multipart/form-data" class="edit-ingredient-wrapper">
        @Html.AntiForgeryToken()

        <!-- Food Name -->
        <div>
            <label asp-for="Name">Food Name</label>
            <input asp-for="Name" class="edit-ingredient-quantity" placeholder="Enter food name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div>
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" step="0.01" min="0.10" max="9999.99"
                   class="edit-ingredient-quantity" placeholder="e.g., 10.50" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="edit-ingredient-quantity" rows="3"
                      placeholder="Enter description (optional)"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Drag-and-Drop Image Upload -->
        <div>
            <label asp-for="Photo">Upload Image</label>

            <div id="dropZone" class="drop-zone">
                <p>Drag & drop an image here or click to select</p>
                <input asp-for="Photo" type="file" accept="image/*" class="file-input" />
            </div>

            <span asp-validation-for="Photo" class="text-danger"></span>

            <div class="mt-2">
                <img id="previewImage" src="" alt="Preview" style="max-width:150px; display:none;" />
            </div>
        </div>

        <!-- Category -->
        <div>
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="edit-ingredient-quantity" required>
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="edit-button-group">
            <button type="submit" class="edit-submit-btn">Submit</button>
            <button type="reset" class="edit-submit-btn">Reset</button>
            <a asp-action="Foods" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>


<script>
    const dropZone = document.getElementById('dropZone');
    const fileInput = dropZone.querySelector('.file-input');
    const previewImage = document.getElementById('previewImage');

    // Click to open file dialog
    dropZone.addEventListener('click', () => fileInput.click());

    // Handle file selection
    fileInput.addEventListener('change', () => {
        if (fileInput.files.length) {
            previewImage.src = URL.createObjectURL(fileInput.files[0]);
            previewImage.style.display = 'block';
        }
    });

    // Drag over effect
    dropZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropZone.classList.add('dragover');
    });

    dropZone.addEventListener('dragleave', () => {
        dropZone.classList.remove('dragover');
    });

    // Drop file
    dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.classList.remove('dragover');
        if (e.dataTransfer.files.length) {
            fileInput.files = e.dataTransfer.files;
            previewImage.src = URL.createObjectURL(e.dataTransfer.files[0]);
            previewImage.style.display = 'block';
        }
    });
</script>
