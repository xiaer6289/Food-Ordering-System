@model WSM.Models.Food

@{
    ViewData["Title"] = "Add Food";
}

<div class="edit-ingredient-form">
    <h2 class="edit-ingredient-title">Add Food</h2>

    <form asp-controller="Food" asp-action="CreateFood" method="post" class="edit-ingredient-wrapper">
        @Html.AntiForgeryToken()

        <!-- Food Name -->
        <div>
            <label asp-for="Name">Food Name</label>
            <input asp-for="Name" class="edit-ingredient-quantity" placeholder="Enter food name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div>
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" step="0.01" min="0.10" max="9999.99"
                   class="edit-ingredient-quantity" placeholder="e.g., 10.50" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="edit-ingredient-quantity" rows="3"
                      placeholder="Enter description (optional)"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Image URL with Preview -->
        <div>
            <label asp-for="Image">Image URL</label>
            <input asp-for="Image" id="ImageUrl" class="edit-ingredient-quantity" placeholder="Enter image URL (optional)" />
            <span asp-validation-for="Image" class="text-danger"></span>

            <div class="mt-2">
                <img id="previewImage" src="" alt="Preview" style="max-width:150px; display:none;" />
            </div>
        </div>

        <!-- Category -->
        <div>
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="edit-ingredient-quantity" required>
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="edit-button-group">
            <button type="submit" class="edit-submit-btn">Submit</button>
            <button type="reset" class="edit-submit-btn">Reset</button>
            <a asp-action="Foods" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        const imageInput = document.getElementById('ImageUrl');
        const preview = document.getElementById('previewImage');

        imageInput.addEventListener('input', function () {
            const url = imageInput.value.trim();
            if (url) {
                preview.src = url;
                preview.style.display = 'block';
            } else {
                preview.style.display = 'none';
            }
        });

        preview.onerror = function () {
            preview.style.display = 'none';
        };
    </script>
}
